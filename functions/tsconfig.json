{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",  // Change this to 'node'
    "target": "es2020",
    "lib": ["es2020"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "lib"
  },
  "compileOnSave": true,
  "include": ["src"],
  "exclude": ["node_modules"]
}
